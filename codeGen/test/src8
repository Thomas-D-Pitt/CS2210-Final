/* EXAMPLE 4: Two classes this time */
program x4;
class Point {
	     declarations
        		int x, y;
	     enddeclarations
}

class Test {
	declarations
            	Point p0;
	enddeclarations
        method void main()
	     declarations
                	Point p;
		        int xxx;
	     enddeclarations
	{
	        p.y := 1;
	        p.x := 2;
			System.println(p.y);
			System.println(p.x);
			p0.y :=3;
			p0.x :=4;
			System.println(p0.y);
			System.println(p0.x);
        }
}

